@page
@model HotelBookingApp.Pages.Admin.Hotels.CreateModel
@{
    ViewData["Title"] = "Create Hotel";
    Layout = "_Layout";
}

<div class="page-title">
    <h2>Add New Hotel</h2>
    <a href="/Admin/Hotels" class="btn btn-secondary">Back</a>
</div>

<div class="card p-4">
    <form id="hotelForm" onsubmit="createHotel(event)">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input id="name" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Address</label>
            <input id="address" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea id="description" class="form-control" rows="4"></textarea>
        </div>

        <div class="d-flex gap-2">
            <button id="btnSave" class="btn btn-success">Save</button>
            <a href="/Admin/Hotels" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        async function createHotel(e) {
          e.preventDefault();
          const btn = document.getElementById('btnSave'); btn.disabled = true;

          const payload = {
            name: document.getElementById("name").value.trim(),
            address: document.getElementById("address").value.trim(),
            description: document.getElementById("description").value.trim()
          };

          try {
            const res = await fetch("/api/hotels", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              credentials: 'include',
              body: JSON.stringify(payload)
            });
            if (res.ok) { showToast("Hotel created!", "success"); setTimeout(()=>location.href="/Admin/Hotels", 500); }
            else {
              const t = await res.text().catch(()=> "");
              showToast("Error creating hotel" + (t?`: ${t}`:""), "danger");
            }
          } catch { showToast("Network error", "danger"); }
          finally { btn.disabled = false; }
        }
    </script>
}
